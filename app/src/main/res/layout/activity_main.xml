<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/back"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tw_calc"
        android:text="0"
        android:textSize="50dp"
        android:isScrollContainer="true"
        android:gravity="bottom|right"
        android:padding="10dp"
        style="@style/tw"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TextView>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_ac"
                android:text="AC"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_sum"
                android:text="+"
                android:textSize="40dp"
                android:textStyle="bold"
                style="@style/fore"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="30dp"
                android:layout_weight="1"
                style="@style/fore"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_sub"
                android:text="-"
                android:textSize="50dp"
                style="@style/fore"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_mul"
                android:text="x"
                android:textSize="35dp"
                style="@style/fore"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="30dp"
                style="@style/fore"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn_div"
                android:text="/"
                android:textSize="40dp"
                style="@style/fore"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                app:cornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<!--
                <Button
                    android:id="@+id/btn_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    app:cornerRadius="30dp"
                    style="@style/styleButton"
                    android:drawableTop="@drawable/img_color"
                    >
                </Button>
-->
                <Button
                    android:id="@+id/btn_0"
                    android:text="0"
                    android:textSize="30dp"
                    style="@style/fore"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    app:cornerRadius="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_eq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/fore"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="="
                android:textSize="50dp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>